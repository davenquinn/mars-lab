#!/bin/bash

if [ ${1:-""} = "--debug" ]; then
  echo "Running in debug mode"
  export COMPOSE_FILE="$COMPOSE_FILE:$MARS_LAB/system/docker-compose.debug.yaml"
  shift
fi

echo $COMPOSE_FILE

mars lab up --remove-orphans --build -d $@

mars lab exec gateway nginx -s reload

mars lab logs --tail=10 -f